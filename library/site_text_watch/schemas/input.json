{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["url", "must_include"],
  "additionalProperties": false,
  "properties": {
    "url": {
      "type": "string",
      "format": "uri"
    },
    "must_include": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "must_not_include": {
      "type": "array",
      "default": [],
      "items": { "type": "string" }
    },
    "case_sensitive": {
      "type": "boolean",
      "default": false
    }
  }
}
